<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
             x:Class="jppaApp.Views.InicioPage">
    <!-- Nombre: Juan Pablo Palma Apoderado No.Control: 1221100259 -->
    <ContentPage.Content>
        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <material:MaterialCard Grid.Row="0" Grid.Column="0" CornerRadius="5" Margin="5" IsClickable="True" BackgroundColor="#303030" 
                                   BorderColor="#303030" Elevation="4" Clicked="MaterialCard_Clicked" BindingContext="1">
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Image Source="barras" HeightRequest="60" WidthRequest="60"/>
                    <Label Text="Ver Datos" FontAttributes="Bold" FontSize="Subtitle"/>
               </StackLayout>
            </material:MaterialCard>
            <material:MaterialCard Grid.Row="0" Grid.Column="1" CornerRadius="5" Margin="5" IsClickable="True" Elevation="4" BackgroundColor="#303030"
                                   BorderColor="#303030" Clicked="MaterialCard_Clicked" BindingContext="2">
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <Image Source="iot" HeightRequest="60" WidthRequest="60"/>
                    <Label Text="Dispositivos" FontAttributes="Bold" FontSize="Subtitle" />
                </StackLayout>
            </material:MaterialCard>

            <material:MaterialCard Grid.Row="1" Grid.Column="0" CornerRadius="5" Margin="5" IsClickable="True" Elevation="4" BackgroundColor="#303030" 
                                   BorderColor="#303030" Clicked="MaterialCard_Clicked" BindingContext="3">
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <Image Source="encendido" HeightRequest="60" WidthRequest="60"/>
                    <Label Text="Encender" FontAttributes="Bold" FontSize="Subtitle"/>
                </StackLayout>
            </material:MaterialCard>

            <material:MaterialCard Grid.Row="1" Grid.Column="1" CornerRadius="5" Margin="5" IsClickable="True" Elevation="4" BackgroundColor="#303030"
                                   BorderColor="#303030" Clicked="MaterialCard_Clicked" BindingContext="4">
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <Image Source="comprobar" HeightRequest="60" WidthRequest="60"/>
                    <Label Text="Información" FontAttributes="Bold" FontSize="Subtitle"/>
                </StackLayout>
            </material:MaterialCard>

        </Grid>
    </ContentPage.Content>
</ContentPage>